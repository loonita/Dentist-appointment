<title>Crear cita espera &middot; ClÃ­nica Dental San Antonio</title>

<div class="page-content page-container d-flex justify-content-center align-items-center" id="page-content">
  <div class="padding">
    <div class="row container d-flex justify-content-center">

      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card" style="width: 500px;">
          <div class="card-body">
            <div class="col-sm-12"><h2>Crear <b>Cita en espera</b></h2><br></div>
            <%= form_for(@appointment, html: { method: :put }) do |form| %>


              <div class="card">
                <table class="table">
                  <thead>


                  <tr>
                    <td><b>Rut paciente</b></td>
                    <td><%= User.find_by(id: @patient_recibido).rut %></td>
                  </tr>
                  <tr>
                    <td><b>Nombre paciente</b></td>
                    <td><%= User.find_by(id: @patient_recibido).name_patient %></td>
                    <%= form.hidden_field :user_id, value: @patient_recibido %>
                  </tr>
                  <tr>
                    <td><b>Nombre dentista</b></td>
                    <td><%= form.collection_select :dentist_id, User.where(role_id: 2), :id, :name_dentist, class: "form-control small-input" %></td>
                  </tr>
                  <tr>
                    <td><b>Tipo urgencia</b></td>
                    <td><%= form.collection_select :urgencia_id, Urgencium.all.order(id: :asc), :id, :name %></td>
                  </tr>
                  <tr>
                    <td><b>Mensaje</b></td>
                    <td><%= form.text_area :mensaje, class: "form-control" %></td>
                  </tr>

                  <%= form.hidden_field :status, value: 5 %>

                  </thead>
                </table>
              </div>

              <div class="form-group">
                <br>
                <%= form.submit "Guardar", class: "btn btn-primary btn-sm" %>
                <%= link_to "Cancelar", appointments_pending_path, class: "btn btn-outline-danger btn-sm" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
</div>

