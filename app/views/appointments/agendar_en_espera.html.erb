<title>Crear cita espera &middot; Cl√≠nica Dental San Antonio</title>

<body class="my-login-page">
<section class="h-100">
  <div class="container h-100">
    <div class="row justify-content-md-center h-100">
      <div class="card-wrapper">
        <br><br><br>
        <div class="card fat">
          <div class="card-body">
            <div class="col-sm-7"><h2>Crear <b>cita en espera</b></h2><br></div>
            <%= form_for(@appointment, html: { method: :put }) do |form| %>
              <div class="form-group">
                <b><%= form.label "Paciente" %></b><br>
                <%= form.collection_select :user_id, User.where(role_id: 1), :id, :name_patient, class: "form-control small-input" %>
              </div>

              <div class="form-group">
                <b><%= form.label "Dentista" %></b><br>
                <%= form.collection_select :dentist_id, User.where(role_id: 2), :id, :name_dentist, class: "form-control small-input" %>
              </div>

              <div class="field">
                <b><%= form.label "Tipo urgencia" %></b><br>
                <%= form.collection_select :urgencia_id, Urgencium.all.order(id: :asc), :id, :name %>
              </div>

              <div class="field">
                <b><%= form.label "Mensaje" %></b><br>
                <%= form.text_area :mensaje, class: "form-control small-input" %>
              </div>

              <%= form.hidden_field :status, value: 5 %>

              <div class="form-group">
                <br>
                <%= form.submit "Guardar", class: "btn btn-primary btn-sm" %>
                <%= link_to "Cancelar", root_path, class: "btn btn-outline-danger btn-sm" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>