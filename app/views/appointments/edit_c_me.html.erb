<title>Editar cita &middot; Cl√≠nica Dental San Antonio</title>

<%= form_with(model: @appointment, local: true, html: { class: "form" }) do |form| %>

  <body class="my-login-page">
  <section class="h-100">
    <div class="container h-100">
      <div class="row justify-content-md-center h-100">
        <div class="card-wrapper">
          <br><br><br>
          <div class="card fat">
            <div class="card-body">
              <div class="col-sm-10"><h2>Editar<b> Cita</b></h2><br></div>

              <p id="<%= dom_id @appointment %>">

              <div class="card">
                <table class="table">
                  <thead>

                  <tr>
                    <td><b>Rut paciente</b></td>
                    <td><%= User.find_by(id: @appointment.user_id).rut %></td>
                  </tr>
                  <tr>
                    <td><b>Nombre paciente</b></td>
                    <td><%= User.find_by(id: @appointment.user_id).name_patient %></td>
                  </tr>
                  <tr>
                    <td><b>Rut dentista</b></td>
                    <td><%= User.find_by(id: @appointment.dentist_id).rut %></td>
                  </tr>
                  <tr>
                    <td><b>Nombre dentista</b></td>
                    <td><%= User.find_by(id: @appointment.dentist_id).name_patient %></td>
                  </tr>
                  <tr>
                    <td><b>Fecha</b></td>
                    <td><%= @appointment.fecha %></td>
                  </tr>
                  <tr>
                    <td><b>Hora</b></td>
                    <td><%= @appointment.hora %></td>
                  </tr>
                  <tr>
                    <td><b>Mensaje</b></td>
                    <td><%= form.text_area :mensaje, class: "form-control" %></td>
                  </tr>

                  </thead>
                </table>
              </div>

              <div class="form-group">
                <%= form.submit "Guardar", class: "btn btn-primary btn-sm" %>
                <%= link_to "Cancelar", appointments_path, class: "btn btn-outline-danger btn-sm" %>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  </body>

<% end %>

