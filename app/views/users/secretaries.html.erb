<title>Secretarias &middot; Clínica Dental San Antonio</title>

<div class="page-content page-container d-flex justify-content-center align-items-center" id="page-content">
  <div class="padding">
    <div class="row container d-flex justify-content-center">

      <div class="col-lg-16 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-7"><h2>Lista <b>Secretarias</b></h2></div>

              <p class="card-description">
                Lista de secretarias de la Clínica San Antonio.
              </p>
            </div>

            <% if user_is_admin? %>
              <%= link_to "Añadir secretaria", users_new_path, class: "btn btn-success" %>
              <br> <br>
            <% end %>

            <div class="table-responsive">
              <div class="pagination">
                <br>
                <%= paginate @secretaries %>
              </div>
              <table class="table">
                <thead>
                <tr>
                  <th>ID No.</th>
                  <th width = "120px">RUT</th>
                  <th width="180px">Nombres</th>
                  <th width="180px">Apellidos</th>
                  <th>Correo electrónico</th>
                  <th>Número telefónico</th>
                </tr>
                </thead>

                <tbody>

                <% @secretaries.each do |secretary| %>
                  <tr>
                    <td><%= secretary.id %></td>
                    <td><%= secretary.rut %></td>
                    <td><%= secretary.name %></td>
                    <td><%= secretary.last_name %></td>
                    <td><%= secretary.email %></td>
                    <td><%= secretary.phone %></td>

                    <% if user_is_admin?  %>
                      <td><%= link_to "Ver", secretary, class: "btn btn-secondary" %></td>
                    <% end %>

                <% end %>

                </tbody>

              </table>
              <div class="pagination">
                <br>
                <%= paginate @secretaries %>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<br> <br> <br> <br>