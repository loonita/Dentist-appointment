<title>Perfil &middot; Clínica Dental San Antonio</title>

<p style="color: green"><%= notice %></p>

<div class="page-content page-container" id="page-content">
  <div class="padding">
    <div class="row container d-flex justify-content-center">

      <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">

            <h4 class="card-title">Perfil</h4>
            <p class="card-description">
              Perfil de usuario.
            </p>

                    <div class="card">
                      <table class="table">

                        <tr>
                          <td><b>Rut</b></td>
                          <td><%= @user_from_users.rut %></td>
                        </tr>
                        <tr>
                          <td><b>Nombres </b></td>
                          <td><%= @user_from_users.name %></td>
                        </tr>
                        <tr>
                          <td><b>Apellidos </b></td>
                          <td><%= @user_from_users.last_name %></td>
                        </tr>
                        <tr>
                          <td><b>Correo electrónico</b></td>
                          <td><%= @user_from_users.email %></td>
                        </tr>
                        <tr>
                          <td><b>Número de teléfono </b></td>
                          <td><%= @user_from_users.phone %></td>
                        </tr>

                      </table>
                    </div>

                    <br>
              <%= form_for(@user, html: { method: :put }) do |f| %>
                <div class="field">
                  <%= f.label :name %><br />
                  <%= f.text_field :name, autofocus: true %>
                </div>
              <div class="field">
                <%= f.label :last_name %><br />
                <%= f.text_field :last_name, autofocus: true %>
              </div>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

                <%= f.submit "Guardar cambios", class: "btn btn-primary btn-sm" %>
              <%end %>

            <% if user_is_admin? || user_is_secretary? || user_is_dentist? %>
            <div class="card">
              <table class="table">
                <h4 class="card-title">Citas.</h4>
                <p class="card-description">
                  Citas asociadas del usuario.
                </p>


                  <% @appointments.each do |appointment| %>
                    <%= render appointment %>
                    <p>
                      <%= link_to "Mostrar cita", appointment, class: "btn btn-primary btn-sm" %>
                    </p>
                  <% end %>

              </table>
            </div>
            <% end %>


            <br>
                   <p> <%= link_to "Volver", :back, class: "btn btn-outline-primary btn-sm" %></p>
            <br>
                </div>
            </div>
      </div>
    </div>
  </div>
</div>


