<title>Editar perfil  &middot; Clínica Dental San Antonio</title>


<div class="page-content page-container d-flex justify-content-center align-items-center" id="page-content">
  <div class="padding">
    <div class="row container d-flex justify-content-center">

      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card" style="width: 450px;">
          <div class="card-body">
          <div class="col-sm-12"><h2>Editar <b>Perfil</b></h2></div>
<br>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <% if user_is_admin? %>
              <div class="field">
                <b><%= f.label "Rol" %><br /></b>
                <%= f.collection_select :role_id, Role.all.order(name: :asc), :id, :name %>
              </div>
              <% end %>

              <div class="field">
                <b><%= f.label "Nombres" %><br /></b>
                <%= f.text_field :name, autofocus: true, class: "form-control" %>
              </div>

              <div class="field">
                <b><%= f.label "Apellidos" %><br /></b>
                <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
              </div>

              <div class="field">
                <b><%= f.label "Correo electrónico" %><br /></b>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="field">
                <b><%= f.label "Número telefónico" %><br /></b>
                <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control" %>
              </div> <br>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <b><%= f.label "Nueva contraseña" %> <i>(Deja el campo en blanco si no la quieres cambiar)</i><br /></b>
                <% if @minimum_password_length %>
                  <em><%= @minimum_password_length %> caracteres como mínimo.</em>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="field">
                <b><%= f.label "Repite nueva contraseña" %><br /></b>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
              <br>
              <div class="field">
                <b><%= f.label "Contraseña actual" %> <i>(Ingresa tu contraseña actual para guardar los cambios)</i><br /></b>
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
              </div>

              <br>

              <div class="actions">
                <%= f.submit "Guardar cambios", class: "btn btn-primary btn-sm" %>
                <%= link_to "Cancelar", user_path(current_user), class: "btn btn-outline-danger btn-sm" %>
              </div>
            <% end %>

            <br>

          </div>
        </div>
      </div>
    </div>

  </div>
</div>
</div>


