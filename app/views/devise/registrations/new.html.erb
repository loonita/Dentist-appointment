
  <title>Regístrate  &middot; Clínica Dental San Antonio</title>


  <div class="page-content page-container d-flex justify-content-center align-items-center" id="page-content">
    <div class="padding">
      <div class="row container d-flex justify-content-center">

        <div class="col-lg-12 grid-margin stretch-card">
          <div class="card" style="width: 450px;">
            <div class="card-body">
            <h3 class="card-title">Regístrate</h3>
<br>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group">
                <b><%= f.label "Run", class: "form-label" %></b><br />
                <%= f.text_field :rut, autofocus: true, autocomplete: "Run", class: "form-control" %>
              </div>

              <div class="form-group">
                <b><%= f.label "Nombres", class: "form-label" %></b><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
              </div>

              <div class="form-group">
                <b><%= f.label "Apellidos", class: "form-label" %></b><br />
                <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
              </div>

              <div class="form-group">
                <b><%= f.label "Número telefónico", class: "form-label" %></b>
                  <em>(9xxxxxxxx)</em><br />
                <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control" %>
              </div>

              <div class="form-group">
                <b><%= f.label "Correo electrónico", class: "form-label" %></b><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="form-group">
                <b><%= f.label "Contraseña", class: "form-label" %></b>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> caracteres como mínimo)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="form-group">
               <b><%= f.label "Repetir contraseña", class: "form-label" %></b><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
<br>
              <div class="mb-3 d-flex align-items-center justify-content-center">
                <%= f.submit "Regístrate", class: "btn btn-lg btn-primary rounded-pill" %>
                  </div>
            <% end %>

            <div class="mt-4 text-center">
              ¿Ya tienes una cuenta?
            <%= render "devise/shared/links" %>

            </div>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
  </div>


  <br> <br> <br> <br> <br> <br>