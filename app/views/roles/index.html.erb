<title>Roles &middot; Clínica Dental San Antonio</title>

<div class="page-content page-container d-flex justify-content-center align-items-center" id="page-content">
  <div class="padding">
    <div class="row container d-flex justify-content-center">

      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="col-sm-7"><h2>Roles <b>usuarios</b></h2></div>
            <p class="card-description">
              Roles de usuario de la Clínica San Antonio.
            </p>

            <%= link_to "Crear nuevo rol", new_role_path, class: "btn btn-success" %>

            <div class="table-responsive">
              <table class="table">
                <thead>
                <tr>
                  <th width="100px">ID No.</th>
                  <th width="250px">Nombre rol</th>
                </tr>
                </thead>

                <tbody>
                <% @roles.each do |role| %>
                  <tr>
                    <td><%= role.id %></td>
                    <td><%= role.name %></td>
                    <td><%= link_to "Ver" , role, class: "btn btn-secondary" %></td>
                    <td><%= link_to "Editar", edit_role_path(role), class: "btn btn-info" %></td>
                  </tr>
                <% end %>
                </tbody>

              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>