<div id="<%= dom_id role %>">
  <p>
    <strong>Nombre rol:</strong>
    <%= role.name %>
  </p>

  <%= link_to "Editar este rol", edit_role_path(@role), class: "btn btn-info btn-sm" %> |
  <%= link_to "Volver a roles", roles_path, class: "btn btn-outline-primary btn-sm" %>
  <br><br>
  <%= button_to "Eliminar este rol", @role, method: :delete, class: "btn btn-danger btn-sm" %>

</div>
