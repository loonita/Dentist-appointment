<title>Horas disponibles &middot; Clínica Dental San Antonio</title>

<div class="page-content page-container" id="page-content">
  <div class="padding">
    <div class="row container d-flex justify-content-center">

      <div class="col-lg-8 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="col-sm-7"><h2>Horas <b>disponibles</b></h2></div>
            <p class="card-description">
              Horas disponibles para agendar cita en Clínica San Antonio.
            </p>

            <%= link_to "Nueva hora", new_morning_time_path, class: "btn btn-success" %>

            <div class="table-responsive">
              <table class="table">
                <thead>
                <tr>
                  <th>ID No.</th>
                  <th>Hora mañana</th>
                </tr>
                </thead>

                <tbody>
              <% @morning_times.each do |morning_time| %>
                  <tr>
                    <td><%= morning_time.id %></td>
                    <td><%= morning_time.m_time %></td>
                    <td><%= link_to "Ver", morning_time_path(morning_time), class: "btn btn-info" %></td>
                    <td><%= link_to "Editar", edit_morning_time_path(morning_time), class: "btn btn-primary" %></td>
                  </tr>
              <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>


