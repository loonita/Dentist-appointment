<title>Estados &middot; Clínica Dental San Antonio</title>

<div class="page-content page-container d-flex justify-content-center align-items-center" id="page-content">
  <div class="padding">
    <div class="row container d-flex justify-content-center">

      <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <div class="col-sm-7"><h2>Estados <b>Citas</b></h2></div>
            <p class="card-description">
              Estados de citas (appointments status) de la Clínica San Antonio.
            </p>

            <%= link_to "Crear nuevo estado", new_status_path, class: "btn btn-success" %>

            <div class="table-responsive">
              <table class="table">
                <thead>
                <tr>
                  <th width="250px">Nombre estado</th>
                </tr>
                </thead>


                <tbody>
                <% @statuses.each do |status| %>
                  <tr>
                    <td><%= status.name %></td>
                    <td><%= link_to "Ver", status, class: "btn btn-secondary" %></td>
                    <td><%= link_to "Editar", edit_status_path(status), class: "btn btn-info" %></td>
                <% end %>
                </tbody>


              </table>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
