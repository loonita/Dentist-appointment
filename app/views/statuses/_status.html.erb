<div id="<%= dom_id status %>">
  <p>
    <strong>Nombre:</strong>
    <%= status.name %>
  </p>

  <%= link_to "Editar este estado", edit_status_path(@status), class: "btn btn-info btn-sm" %> |
  <%= link_to "Volver a estados", statuses_path, class: "btn btn-outline-primary btn-sm" %>
  <br><br>
  <%= button_to "Eliminar este estado", @status, method: :delete, class: "btn btn-danger btn-sm" %>

</div>
